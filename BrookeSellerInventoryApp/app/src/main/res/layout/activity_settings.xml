<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cream">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cream"
            app:title="Settings"
            app:titleTextColor="@color/brown"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/brown"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="28dp">

            <!-- Notifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textAllCaps="true"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <!-- Permission status row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/smsChecking"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:indicatorSize="18dp"
                    android:visibility="gone"
                    app:indicatorColor="@color/brown"/>

                <TextView
                    android:id="@+id/tvPermissionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="SMS/Notification permission"
                    android:textColor="@color/brown"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Enable SMS Notifications -->
            <Button
                android:id="@+id/btnEnableNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable SMS Notifications"
                android:textColor="@color/cream"
                android:backgroundTint="@color/brown"
                android:insetTop="8dp"
                android:insetBottom="8dp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                app:dividerColor="@color/brown"/>

            <!-- Manage notifications -->
            <LinearLayout
                android:id="@+id/rowManageNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/_11751_gear_icon"
                    android:contentDescription="@null"
                    app:tint="@color/brown" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage notification settings"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open system settings for channels and sounds"
                        android:textColor="@color/brown"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textAllCaps="true"
                android:textColor="@color/brown"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- Change password -->
            <LinearLayout
                android:id="@+id/rowChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/_52525_lock_icon"
                    android:contentDescription="@null"
                    app:tint="@color/brown" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change password"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your account password"
                        android:textColor="@color/brown"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:dividerColor="@color/brown"/>

            <!-- Send feedback (kept as-is) -->
            <LinearLayout
                android:id="@+id/rowSendFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/_52094_send_icon"
                    android:contentDescription="@null"
                    app:tint="@color/brown" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send feedback"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report issues or suggest features"
                        android:textColor="@color/brown"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
