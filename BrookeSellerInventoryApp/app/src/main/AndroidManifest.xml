<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Optional: app can run on devices without telephony -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <!-- Permissions you use -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="BrookeSellerInventoryApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrookeSellerInventoryApp">

        <!-- Launcher activity (no legacy Holo theme override) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tabs screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Other screens -->
        <activity
            android:name=".SmsPermissionActivity"
            android:exported="false" />
        <activity
            android:name=".DisplayLoginsActivity"
            android:exported="false" />
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".ItemProductActivity"
            android:exported="false"/>
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ZeroStockActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
    </application>
</manifest>
