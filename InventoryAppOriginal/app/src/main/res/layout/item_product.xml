<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cream">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/cream">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cream"
            app:title="Product Details"
            app:titleTextColor="@color/brown"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/brown"
            app:layout_scrollFlags="scroll|enterAlways" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cream">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/product_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/brown"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/imgProduct"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Short Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/brown"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- SKU -->
                <TextView
                    android:id="@+id/labelSku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/sku"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- SKU number -->
                <TextView
                    android:id="@+id/tvSku"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:layout_marginStart="6dp"
                    app:layout_constraintStart_toEndOf="@id/labelSku"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/labelSku" />

                <!-- UPC -->
                <TextView
                    android:id="@+id/labelUpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/upc"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    app:layout_constraintTop_toBottomOf="@id/tvSku"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- UPC number -->
                <TextView
                    android:id="@+id/tvUpc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:layout_marginStart="6dp"
                    app:layout_constraintStart_toEndOf="@id/labelUpc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/labelUpc" />

                <!-- quantity -->
                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="âˆ’"
                    android:textSize="24sp"
                    android:textColor="@color/cream"
                    app:backgroundTint="@color/brown"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tvUpc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/etQty" />

                <EditText
                    android:id="@+id/etQty"
                    android:layout_width="72dp"
                    android:layout_height="56dp"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="4"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:backgroundTint="@color/brown"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@id/btnMinus"
                    app:layout_constraintEnd_toStartOf="@id/btnPlus"
                    app:layout_constraintBaseline_toBaselineOf="@id/btnMinus"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="@color/cream"
                    app:backgroundTint="@color/brown"
                    app:layout_constraintStart_toEndOf="@id/etQty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/btnMinus" />

                <!-- Remove button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/remove_item"
                    android:textColor="@color/cream"
                    android:textStyle="bold"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnPlus"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
